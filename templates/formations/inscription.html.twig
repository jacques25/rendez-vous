{% extends "base.html.twig" %}

{% block title %} inscription {{formation.title}} {% endblock %}

{% block body %}
<div class="container"> 

<div class="row mt-5">
<h1>{{formation.title}}</h1>
</div>

<div class="row">
   {{form_start(form, {'attr': {'class': 'modalForm' , 'id': 'modalForm' }}) }}

 
  <div class="form-group">
       {{form_row(form.gender)}}
      {{form_row(form.firstName,  {'attr': {'class': 'ml-2 mr-2'}})}}
       {{form_row(form.lastName,  {'attr': {'class': 'ml-2'}})}}
      {{form_row(form.email)}}
  </div>
  <div class="form-group"> 
        {{form_row(form.date_naissance,  {'attr': {'class': 'ml-2'}})}}
        
        {{form_row(form.phone, {'attr' : {'class': 'form-control-sm'}})}}
  </div>
   <button type="submit" class="btn btn-success"> S'inscrire </button>
   {{form_end(form)}}      
</div>
</div>
 </div>
{% endblock %}

