{% extends "base.html.twig" %}

		{% block title %}
			{{formation.title }}
		{% endblock %}

		{% block body %}

		  <div class="row content-page">
			{% if formation.filename is defined %}
       <div class="jumbotron" style="background:url({{ vich_uploader_asset(formation, 'imageFile')}}) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
     background-size: cover;">   </div>
      
      {% endif %} 

		
			    <div class="col-md-12">

						  <h1 class="mt-3"> {{formation.title }}</h1>
						
          </div>
					<div class="col-md-12">	
							<table class="table table-formation">
								<thead class="table-thead">
									<tr>
									<th scope="col">	Date de la  formation</th>	
										<th scope="col"> 	Prix de la formation</th>	
										<th scope="col"> Places Disponible </th>
										<th scope="col" >Inscrits</th>
										<th scope="col">S'incrire</th>
								
									</tr>
								</thead>
					
									<tbody class="table-body">		
									 {% for booking in formation.booking %}
									<tr>
						
									 <td>
					             Le  {{ booking.beginAt|format_date( 'full') }} de {{booking.beginAt|format_time('medium')}} à {{booking.endAt|format_time('medium' )}}
										</td>
							
                 
										<td>
											{{formation.prix|format_currency('EUR', {rounding_mode:'floor'} )}} 
										</td>   
										<td> 	<div class="badge-dispo"> {{formation.nbUsers}}</div></td>
                     <td> 
										 	{% if   usersFormation  == 0 %}
								<div class="badge-dispo"> {{usersFormation}}</div>
							{% elseif  usersFormation  != 0  and usersFormation < formation.nbUsers %}
							  
						 <div class="badge-warning"> {{ usersFormation}} </div>
              {% elseif  usersFormation == formation.nbUsers %}
								 	<div class="badge-danger">Complet </div> 
						{% endif %}
						</td>
										<td>
                            <a href="{{path('formation_booking', {'id': formation.id})}}" class="btn btn-info   mb-1">S'incrire</a>
												
										</td>

				  </tr>
							 {% endfor %}
										
								</tbody>
							</table>
              <div>	{{formation.description|raw}}</div>

											<section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Ils ont donné leur avis</h3>   
					     {% include 'comment/formation_comment.html.twig' with { 'comments': formation.comments } %}
            
   
      
    </section>
          </div>
          </div>
                 
			</div>
			
{% endblock %}
