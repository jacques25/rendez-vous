{% extends "base.html.twig" %}

		{% block title %}
			{{formation.title }}
		{% endblock %}

		{% block body %}

		  <div class="row content-page">
			{% if formation.filename is defined %}
       <div class="jumbotron" style="background:url({{ vich_uploader_asset(formation, 'imageFile')}}) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
     background-size: cover;">   </div>
      
      {% endif %} 

		
			    <div class="col-md-12">

						  <h1 class="mt-3"> {{formation.title }}</h1>
							{% if nbUsers  !=  0 %}
								<div class="alert alert-success">	 Nombre de places  disponible :     {{formation.nbUsers - nbUsers}}</div>
							{% elseif formation.nbUsers  <   4 %}
						<div class="alert alert-warning">Il ne reste plus que :     {{formation.nbUsers - nbUsers}} disponible </div>

						{% endif %}
          </div>
					<div class="col-md-12">	
							<table class="table table-hover table-font-size">
								<thead>
									<tr>
									<th scope="col">	Date de la  formation</th>
										<th scope="col"> 	Prix de la formation</th>
										<th scope="col">S'incrire</th>
									</tr>
								</thead>
					
									<tbody>
									<tr>
								 {% for booking in formation.booking %}
									 <td>
					             Le  {{ booking.beginAt|format_date( 'full') }} de {{booking.beginAt|format_time('medium')}} à {{booking.endAt|format_time('medium' )}}
										</td>
								 {% endfor %}
										

										<td>
											{{formation.prix}} 
										</td>
										<td>
                            <a href="{{path('formation_booking', {'id': formation.id})}}" class="btn btn-info" {# data-toggle="modalForm" data-target="modalForm" #}>S'incrire à la formation</a>
													  <a href="{{path('seance_booking', {'id' : formation.id})}}" class="btn btn-info" >Voir le calendrier</a> 
										</td>

				  </tr>
						
								</tbody>
							</table>
              <div>	{{formation.description|raw}}</div>

											<section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Ils ont donné leur avis</h3>   
					     {% include 'comment/formation_comment.html.twig' with { 'comments': formation.comments } %}
            
   
      
    </section>
          </div>
          </div>
                 
			</div>
			
{% endblock %}
