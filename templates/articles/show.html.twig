{% extends "base.html.twig" %}
{% block title %} {{article.title}}{% endblock %}
{% block body %}
 
    <div class="row"> 
         <img class="img-top img-fluid" src="{{ vich_uploader_asset(article, 'imageFile')}}" alt="{{article.filename}}">
    </div>
    <div class="row">
        <div class="col-md-6 col-md-12">
           <h1 class="mt-3">{{article.title }}</h1>
         </div>
       <div class="col-md-6 col-md-12">
        <article class="p-4"> {{ article.description|raw }}   </article>
         </div>
    </div>
{% endblock %}


    