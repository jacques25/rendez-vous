{% extends 'base.html.twig' %}


     {% block title %} {{booking.title}} {% endblock %}

   

{% block body %}

 {% if booking.formation != null %}
     

   	<div id="modalFormation" class="modalFormation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		 <div class="modal-dialog" role="document">
		   
		      <div class="modal-content">
					    <div class="modal-header">
									 <h5 id="modal-title">  {{booking.title}} </h5>
									  <button type="button" class="close white-text" data-dismiss="modalForm" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                    </button>
                                     
             </div>
             <div class="modal-body">
                        {{ include('booking/_formation_form.html.twig') }}
             </div>
             <div class="modal-footer">
                <a class="btn btn-info"  href="{{path('formation_booking', {'id': booking.formation.id, 'booking' : booking.id})}}">s'incrire </a>
  
          </div>

    
   </div>

{% endif %}
{% if booking.seanceOption != null %}
  

    <div id="modalFormEdit" class="modal-form" aria-hidden="true">
		 <div class="modal-dialog" role="document">
		   
		      <div class="modal-content">
					    <div class="modal-header">
									 <h5 id="modal-title">  {{booking.title}} </h5>
             </div>
             <div class="modal-body">
                           
                                
                      
                                <legend>{{user.gender}}
                                  {{user.firstName}}
                              {{user.lastName}} </legend>
                               <fieldset><strong>Email:  </strong>{{user.email}}</fieldset>
                            
                                
                       <div class="body-text">   <strong> Date de votre rendez-vous :  </strong> </div>
                           Le {{booking.beginAt|format_date('medium') }} 
                              de {{booking.beginAt|format_time('short')}} heure
                              Ã    {{booking.endAt|format_time('short')}} heure
                            
                          
             </div>     
        
             <div class="modal-footer">
                    {{ include('booking/_delete_form.html.twig') }}
          </div>

  
   </div> 

 
    {% endif %}
{% endblock %}
