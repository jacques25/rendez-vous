{% extends "base.html.twig" %}

		{% block title %}
			Inscription
		{% endblock %}
		{% block stylesheets %}
			{{ parent() }}
			{{ encore_entry_link_tags('user')}}

		{% endblock %}

		{% block body %}
			<div class="user-register">
					<div class="register bg-light py-3 px-3 ">
						<h4 class="text-center font-italic">
							Inscrivez vous sur notre site
						</h4>
          <div>
						{{form_start(form)}}
						{{form_row(form.gender)}}
            {{form_errors(form.firstName)}}
						{{ form_widget(form.firstName, {'attr': {'class': 'mb-3 mt-3'}}
						)}}
							{{form_errors(form.lastName)}}
						{{form_widget(form.lastName, {'attr': {'class': 'mb-3 mt-3'}}
						)}}
						{{form_errors(form.email)}}
						{{ form_widget(form.email, {'attr': {'class': 'mb-3 mt-3'}}
						)}}
					
						{{form_widget(form.password, {'attr': {'class': 'mb-3 mt-3'}}
						)}}
						{{form_errors(form.passwordConfirm)}}
						{{form_widget(form.passwordConfirm, {'attr': {'class': 'mb-3 mt-3'}}
						)}}
						 </div>
						 <div class="bottom" style="padding:10px; 25px; 25px; border-top:1px solid #cce; color:#888;">
						{{form_widget(form.subscribedToNewsletter)}}
             </div>
						<div class="form-group">

							<button type="submit" class="btn btn-success">
								<i class="fas fa-save"></i>
								S'incrire
							</button>


						</div>
					
					{{ form_end(form)}}
				</div>


			</div>

		{% endblock %}
