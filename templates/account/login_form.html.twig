	<div class="modal  fade" id="modalLogin" tabindex="-1" aria-labelledby="ModalLogin" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered" role="document">
						<div class="modal-content">
							<div class="modal-header">
							           	<h4 class=" modal-title text-center font-italic">	Connectez vous !	</h4>
							</div>
							<div class="modal-body">
								{% if error %}
									<div class="alert alert-danger">
										{{ error.messageKey|trans(error.messageData, 'security') }}
									</div>
								{% endif %}
								<form form-signin action="{{path('account_login')}}" method="POST">

									<div class="form-group p-2">

										<input type="email" name="_username" id="username" class="form-control" autocomplete="username" placeholder="Adresse email..." required autofocus value="{{last_username}}">
									</div>
									<div class="form-group p-2">


										<input type="password" name="_password" id="password" class="form-control p-2" placeholder="Mot de passe..." required autofocus>
									</div>
									<div class="checkbox mb-3">
										<label>
											<input type="checkbox" name="_remember_me">
											Se souvenir de moi
										</label>
									</div>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="form-group mx-2">
										<button type="submit" class="btn btn-success">
											<i class="fas fa-sign-in-alt"></i>
											Connexion
										</button>
                  
									</div>

								</form>
							</div>
							<div class="modal-footer"> 
							        
              <a href="{{path('app_forget_password')}}" class="btn text-info float-left">Mot de passe oubli√©</a>
							<a href="{{path('account_register')}}" class="btn text-info float-right">S'incrire</a>
            
							</div>
						</div>
					</div>
				</div>
