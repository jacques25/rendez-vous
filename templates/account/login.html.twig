{% extends 'base.html.twig' %}

		{% block title %}
			Connexion au site
		{% endblock %}
		{% block stylesheets %}
		 {{ parent() }}
      {{ encore_entry_link_tags('user')}}
		  
		{% endblock %}

		{% block body %}
		
			
 <div class="user-connect">	

			
					<div class="connect bg-light py-3 px-3">
      
							<h4 class="text-center font-italic">Connectez vous !</h4>
						
	          
							<form form-signin action="{{path('account_login')}}" method="POST">
						 	{% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% for label, messages in app.flashes %}
               
                   <div class="alert alert-{{ label }}">
                      {% for message in messages %}
                        <p> {{ message}} </p>
                      {% endfor %}
                   </div>
               
               {% endfor %}
              {% endif %} 
								<div class="form-group p-2">

									<input type="email" name="_username" id="username" class="form-control" autocomplete="username"  placeholder="Adresse email..." required  autofocus value="{{last_username}}">
								</div>
								<div class="form-group p-2">


									<input type="password" name="_password" id="password" class="form-control p-2" placeholder="Mot de passe..." required autofocus >
								</div>
								<div class="checkbox mb-3">
                  <label>
                       <input type="checkbox" name="_remember_me"> Se souvenir de moi
                  </label>
                </div>
								  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<div class="form-group mx-2">
									<button type="submit" class="btn btn-success"><i class="fas fa-sign-in-alt"></i>
										Connexion
									</button>

								</div>

							</form>
             <hr>
            <div class="flot-left">
              <a href="{{path('app_forget_password')}}" class="btn text-info">Mot de passe oubli√©</a>
            </div>

					</div>
          

</div>
				


			
		{% endblock %}

		
