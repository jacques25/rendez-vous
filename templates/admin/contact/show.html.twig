{% extends "admin_base.html.twig" %}

		{% block title %}
			{{contact.subject}}
		{% endblock %}

		{% block body %}
	
	<div class="container">
    <div class="row">
					<h1>
						Objet du message :
						{{contact.subject}}
					</h1>
					</div>
							<div class="content-message">
					<div class="contact-message mt-5">
						<div class="card-contact">
							<div class="card-header">
								<h4>
									{{contact.dateMessage|date('d-m-Y H:i')}}
								</h4>
							</div>
							<div class="card-body">
								<div class="card-text">
									<p>
										<b>
											{{contact.firstname}}
											{{contact.lastname}}
										</b>
									</p>
									<p>
										<b>
											{{contact.email}}
										</b>
									</p>
								</div>
								<div class="card-text">

									{{ contact.message}}
								</div>
							</div>
							<div class="card-footer">
               {% if contact.messageLu == true %}
							 
                            <a  class="btn  btn-success" href="{{path('admin_contact_index')}}" data-toggle="tooltip" data-placement="bottom"  title="Revenir vers la liste des messages">
														<i class="fa fa-check" ></i> Réponse envoyée
                          
                              </a>
														 {% else %}
								<a  data-toggle="modal"  data-target="#modal-response-{{contact.id}}" class="btn btn-info"  href="{{path('admin_contact_response', {'id': contact.id}) }}"> 
									<i class="fa fa-reply"></i> Répondre
								</a>
								 <a  class="btn  btn-success" href="{{path('admin_contact_index')}}" data-toggle="tooltip" data-placement="bottom"  title="Revenir vers la liste des messages">
								     Revenir vers la liste des messages</a>
                {% endif %}
							</div>
   

						</div>
					</div>
     
                    <div class="modal" role="dialog"  id="modal-response-{{contact.id}}">
                       	   <div class="container modal-container">
                            
                                    <div class="contact-me">
							    				<div class="card-contact">
												<div class="card-header">             
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                      <span aria-hidden="true">&times;</span>
                                                    </button>
													<h2 class="text-center font-italic">Réponse	</h2>
                                       
												</div>
												<div class="card-body-contact">

													<form action="{{ path('admin_contact_response', {'id' : contact.id})}}" method="POST">
														<h4 class="mt-3 text-center text-info">
															Object du message :
															{{contact.subject}}
														</h4>
														<div class="from-group p-4">
															<input name="response[subject]" type="hidden" value="{{contact.subject}}" class="form-control" >
														</div>
														<div class="form-group">
															<input type="text" name="response[lastname] " placeholder="{{contact.lastname}}" class="form-control" value="{{contact.lastname}}" required>
														</div>
														<div class="form-group">
															<input type="text" name="response[firstname]" placeholder="{{contact.firstname}}" class="form-control" value="{{contact.firstname}}" required>
														</div>
														<div class="form-group">
															<input type="email" name="response[email]" placeholder="{{contact.email}}" class="form-control" value="{{contact.email}}" required>
														</div>
														<div class="form-group">
															<textarea rows="8" class="form-control" name="response[message]" required></textarea>
														</div>

                            
                               	<button type="submit" class="btn btn-info btn-block rounded-3 py-2 mt-5">
															<i class="fa fa-send" ></i> Envoyer
														</button>
                  
													
													</form>
												</div>
							    				</div>
						           </div>
                                </div> 
                           
                   </div>
				</div>
		</div>
		{% endblock %}
