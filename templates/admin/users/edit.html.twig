{% extends "admin_base.html.twig" %}
 {% block title %} edition {{user.firstName }}{% endblock %}

{% block body %}
 <div class="container-fluid"> 
 <div class="row">
 <div class="col-sm-3">
  <div class="card">
   <div class="card-img m-3">
     <img class="rounded-circle" src="{{vich_uploader_asset(user,'imageFile' )}}" alt="" width="60">
   </div>
    <div class="card-body">
      <div class="card-text">
        <p>{{ user.firstName }}<p>
        <p>{{ user.lastName }}<p>
        <p>{{user.email}}<p>
      </div>
 
  
      {% for address in user.addresses %}
      <div class="card-text">
       <p> {{address.street}}</p>
       <p> {{ address.complement}}</p>
        <p>{{ address.cp}} {{address.city}}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<div class="col-sm-9">
 
     <table class="table-fluid table-striped">
       <thead>
       <tr class="text-center">
         <td>Numéro </td>
         <td> Date</td>
         <td> Article </td>
         <td> Total de la commande</td>
         <td> Validée </td>
       </tr>
      
       </thead>
       <tbody >
        {% for commande in  user.commandes %}
       <tr class="text-center"> 
      
        <td> <a href="{{path('admin_commande_show', {'user' : commande.user.id })}}"> {{ commande.numeroCommande}}</a></td>
        <td> {{ commande.dateCommande|date('d-m-Y')}}</td>
        
         <td>  
          <table class="table-bordered" style="font-size:14px">
        
            {% for article in commande.commande.optionBijou %}
             <tr> 
              <td colspan="2"> {{ article.reference}} </td>
              <td colspan="2"> {{article.quantite}} </td>
              <td colspan="2"> {{article.prix}} </td>
            </tr> 
            
            {% endfor %}
           
          </table>
         </td>
         
        <td> {{ commande.commande.totalCommande }} €</td>
        <td> {{ commande.valider }} </td>
       </tr>
        {% endfor %}
      </tbody>
     
     </table>
   
 </div>
 </div>

</div>

{% endblock %}
