	{% extends "admin_base.html.twig" %}

   {% block title %} inscrits Formation {% endblock %}
  
  {% block body %}
  
   <div class="container">
      
      {% for booking in bookings %}    
   <table class="table-fluid mt-3">
        
         <thead>       
            <tr>
               <th>Prénom</th>
               <th>Nom</th>
               <th>Email</th>
               <th>Téléphone</th>
          
            </tr>
         </thead>
           
          
              <h2>Inscrits à la {{booking.title }}</h2>   
                
                            <p><strong> Le {{booking.beginAt|format_date('short')}} de {{booking.beginAt|format_time('short')}}
                     heure à {{booking.endAt|format_time('short')}} heure. </strong> </p>
           <tbody>  
            
      
                              {% for user in booking.users %}
                          <tr> 
                             <td> {{user.lastName}} </td>
                             <td>  {{user.lastname}}</td>
                             <td> {{user.username}}</td>
                          <td>{{user.phone|split(' ', 2)}}</td>
                   </tr> 
                          
                 {% endfor %}
       
      
   
         </tbody>  
     
         <tfoot>

         
         </tfoot>
      </table> 
       {% endfor %}
  
     <div class="col-sm-12">
							<div class="navigation float-right mr-5">
                     {{ knp_pagination_render(formations) }}
          </div>
   </div>
    
  {% endblock %}
