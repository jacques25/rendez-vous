
{{ form_start(form) }}
<div class="row flex-row">
    <div class="col-md-6">
           <div class="form-group">
              {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
               {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
           </div>
       
    </div>
    <div class="col-md-6">
       <div class="form-group">
            {{form_row(form.imageFile)}}  
            {{form_row(form.prix, { 'attr': {'class': 'form-control'}})}}
       </div>
        <div  id="booking_formation" data-prototype="{{form_widget(form.booking.vars.prototype)|e('html_attr')}}">
      			 
      					{% for row in form.booking %}	
      		
      						<div class="card m-3">
      							<div class="card-header bg-card">
      								<a class="text-dark" href="#item" data-toggle="collapse" aria-controls="#item">
      									{{row.children.title.vars.name}}
      						
												<i class="fas fa-chevron-down float-right"></i>
      								</a>
      							</div>
      							<div class="card-body collapse" id="item">
      								{{form_widget(row)}}
      							</div>
      						</div>
      			
      					{% endfor %}
      			
      				
      </div>
       <div class="form-group">
               {{form_row(form.nb_users)}}
               {{form_row(form.category)}}
       </div>
      <table class="table-fluid mt-3">
      <h4>Nombre d'Inscrits</h4>
         <thead>
            <tr>
               <th>Prénom</th>
               <th>Nom</th>
               <th>Email</th>
               <th>Téléphone</th>
               <th>Action</th>
            </tr>
         </thead>
         <tbody>
         
            {% for user in formation.users %} 
           <tr>
             <td> {{user.firstname}} </td>
             <td>  {{user.lastname}}</td>
             <td> {{user.username}}</td>
             <td>{{user.phone}}</td>
             <td>
             <a href="{{path('admin_formation_user_delete', {id : user.id}) }}"><i class="fa fa-trash"></i></a>
             </td> 
               </tr>
             {% endfor %} 
        
         </tbody>
      </table>
   </div>
</div>
 
   <div class="form-group">
  
     
        <a class="btn btn-info" href="{{ path('admin_formation_index') }}"><i class="fa fa-chevron-left"></i> Retour </a>
    
     <button  type="submit"  class="btn btn-success"><i class="fa fa-save"></i> Enregistrer</button>
     </div>
   
{{ form_end(form) }}
 </div>
