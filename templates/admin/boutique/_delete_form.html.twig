
<form method="post" action="{{ path('admin_boutique_delete', {'id': boutique.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
  <input name="_method" type="hidden" value="DELETE">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ boutique.id) }}">
  <button class="btn btn-danger mt-1"><i class="fa fa-trash"></i></button>
</form>

