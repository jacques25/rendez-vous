{% extends 'admin_base.html.twig' %}


     {% block title %}Edition  {{booking.title}} {% endblock %}


{% block body %}
<div class="container">
<div class="row">
    <div class="modal-form col-md-6" aria-hidden="true">
		 <div class="modal-dialog" role="document">
		   
		   <div class="modal-content">
			 <div class="modal-header">
					 <h5 id="modal-title">Modification de la  {{booking.title}} </h5>
                </div>
               <div class="modal-body">
                {{ include('admin/booking/_form.html.twig') }}
           
               </div>
                <div class="modal-footer">
               </div>
             </div>
             </div>
   </div>
  <div class="col-md-6 mt-4">
   

      {% if booking.seanceOption != null  %}
        
                 
          
         <table class="table table-fluid">
            <thead>
               <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
               </tr>
            </thead>
             <tbody>   

                            {% for user in booking.users %}
                                
                        
                  <tr>
               
                       <td> {{user.lastName}}</td>
                       <td> {{user.firstName }}</td>
                       <td> {{user.email }}</td>
                       <td>{{ user.phone }}</td>
                       <td></td>
                  </tr>
                      {% endfor %}
             </tbody>
         
         </table>
                      
                
    {% endif %} 
    </div>
    </div>
    </div>
{% endblock %}
