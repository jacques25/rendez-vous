{% extends 'admin_base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.title }}</td>
                <td>{{ seance.description|u.truncate(120, '...')|raw }}</td>
               
                
                <td>
                    <a href="{{ path('admin_seance_show', {'id': seance.id}) }}">show</a>
                    <a href="{{ path('admin_seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_seance_new') }}">Create new</a>

    </div>
    </div>
{% endblock %}
