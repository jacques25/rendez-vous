

<form method="post" action="{{ path('admin_bijou_delete', {'id': bijou.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bijou.id) }}">
    <button class="btn btn-danger mx-2"><i class="fas fa-trash"></i></button>
</form>

