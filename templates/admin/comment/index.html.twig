{% extends 'admin_base.html.twig' %}

{% block title %} Liste des commentaires {% endblock %}

{% block body %}

<div class="container">
    <h1> Liste des commentaires</h1>
       <table class=" table table-fluid">
           <thead>
               <tr>
                   <th>Pr√©nom</th>
                  {#  <th>Email</th> #}
                   <th>Message</th>
                   <th>Date</th>
                   <th>Actions</th>
               </tr>
           </thead>
           <tbody> 
            {% for comment  in comments %}
               <tr>  
             
                   <td>{{comment.authorName}}</td>
            {#        <td>{{comment.user.email}}</td> #}
                   <td>{{comment.content|raw|u.truncate('245')}}</td>
                   <td>{{comment.createdAt|format_date('medium')}}</td>
                  <td> 
                     <a href="{{path('admin_comment_edit', {'id': comment.id}) }}"><i class="fa fa-edit"></i></a>
                  </td>
               </tr>
               {% endfor %}
           </tbody>
       </table>
 
          
   
</div>
{% endblock %}
