  <page_header>
          <table class="header">
          <tr>
          <td width="360"> <img class="img-left" src="https://localhost:8000/build/img/rdv.png">
           <h2>Rendez-vous avec soi</h2>
           
          </td>
          <td width="180"></td>
          <td width="180"></td>
          
           <td width="180">page: [[page_nb]]</td>
         </tr>
         </table>

          <table> 
        <tr>
            <td width="360">
             <h4>Facture n°  {{ facture.NumeroCommande }} </h4>   
              <h4>Date de la commande : {{facture.DateCommande|format_datetime('full', 'none', locale='fr')|capitalize  }}</h4>
            </td>
            <td width="180"></td>
            <td width="180">

      
              <address id="coordonnes">
               <p class="address-top"> 
                <em>{{app.user.gender }}</em> 
