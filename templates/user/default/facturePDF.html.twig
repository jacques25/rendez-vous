<!DOCTYPE html PUBLIC "-//W3C//DTDXHTML1.0Transitional//EN" "http//www.w3.org/TR/xhtml1/DTD/xhtlm1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
    <title>Facture</title>
  </head>
  <style>
    
    
    .main {
      width:100%;
      background-color: #c4f2f2;
      top:0;
      left:0;
      padding:10px;
    }
    .header h1 {
      color: #8f725c;
      font-size: 24px;
      display: block;
      position: relative;
      margin-top: 18px;
      margin-right: -18px;
    }

    .center {
      text-align: center;
    }

    .color {
      color: #000;
      font-weight: 900;
      font-size: 14px;
    }

    .strong {
      font-weight: bold;
    }
    .min {
      font-size: 10px;
    }
    .telephone_fixe:before {

      content: "\2706";


    }

    .header img {
      position: relative;
      top: 20px;
      left: 30px;
      width: 30px;
      height: 30px;
      float: left;
      margin: 10px;
    }

    ul#coordonnes {
      float: left;
      margin-top: -68px;
      margin-left: 400px;
      list-style: none;
      font-size: 18px;
      text-transform: uppercase;
    }

    ul#coordonnes li {
      height: 20px;
    }

    table {
      border-bottom: 2px #5c6eef;
    }
    table#enTete {
      position: absolute;
      top: 80px;
      left: 20px;
      text-align: center;
      border-bottom: none;
    }

    table#enTete h1 {
      color: #666;
      font-weight: bold;
      font-size: 20px;
      margin-top: 50px;
      margin-left: 20px;

    }

    .titre {
      margin-top: 30px;
      margin-left: 140px;

      display: block;
    }

    table#entity {
      /*float:left;*/
      margin-top: 30px;
      text-align: center;
    }

    table#entity td {
      height: 45px;

    }

    table#total {
      float: right;
      margin-left: 480px;
      border-bottom: 2px solid #5c6eef;
      border-left: 2px solid #5c6eef;
      border-right: 2px solid #5c6eef;
      margin-top: 0;

    }

    table#total_promo {
      float: right;
      margin-left: 465px;
      border-bottom: 2px solid #5c6eef;
      border-left: 2px solid #5c6eef;
      border-right: 2px solid #5c6eef;
      margin-top: 0;
    }

    table#total td,
    table#total_promo td {
      height: 20px;
    }

    .total-commande {
      margin-top: 50px;
      padding: 20px;
      margin-left: 435px;
    }

    #footer_pdf {
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 60px;
      margin-bottom: -8px;
      color: #fff;
      padding: 10px;
      font-size: 16px;
      background-color: #5c6eef;
    }
    #footer_pdf p {
      line-height: 2px;
    }
    #footer_pdf h3 {
      line-height: 2px;
    }
    .float-right {
      float: right;
      text-decoration: none;
      width: 50%;
      display: block;
      position: relative;
    }

    .float-left {
      float: left;
      width: 50%;
      display: block;
      position: relative;
    }
    .img-left {
      float: left;
    }
  </style>
  <body>
    <div class="main">
      <div class="header">
        <img class="img-left" src="uploads/rendez-vous.png">
        <h1>Rendez-vous avec soi</h1>
      </div>
      <table id="entete">
        <tr>
          <td colspan="1"></td>
          <td colspan="1">
            <h1>Facture</h1>
          </td>
          <td colspan="1"></td>
        </tr>
        <tr class="">
          <td height="20" width="60">
            Page
          </td>
          <td width="100">
            Date
          </td>
          <td width="80">
            Ref
          </td>
        </tr>
        <tr>
          <td class="color">[[page_nb]]</td>
          <td class="color">
            {{facture.date|date('d-m-Y') }}</td>
          <td class="color">
            {{ facture.reference }}</td>
        </tr>
      </table>
      <ul id="coordonnes">
        <li>
          {{facture.commande.facturation.lastname }}
          {{facture.commande.facturation.firstname }}</li>
        <li>
          {{facture.commande.facturation.address }}</li>
        <li>{{facture.commande.facturation.cp }}
          {{facture.commande.facturation.city }}
          {{facture.commande.facturation.country }}</li>
      </ul>


      {% if facture.commande.bijou is defined and facture.commande.bijou is not null %}
        <h2 class="titre">
          Articles
        </h2>


        <table id="entity">


          <tr>
            <td width="180">
              DESIGNATION</td>
            <td width="180">
              QUANTITE</td>
            <td width="180">
              TAILLE
            </td> <td width="180">
              P.U - HT</td>
            <td width="180">
              MONTANT HT</td>
            <td></td>
          </tr>

          {% for bijou in facture.commande.bijou  %}
            <tr>
              <td class="color">{{bijou.title|upper}} - {{ bijou.reference }}</td>
              <td class="color">
                {{ bijou.quantite }}
              </td>
               <td class="color">
               {% for taille in bijou.taille %}
                {{ taille }}
                {% endfor %}
              </td>
              <td class="color">{{ bijou.prix }}</td>
              <td class="color">{{ bijou.prix* bijou.quantite }}</td>


            </tr>
          {% endfor %}
        </table>

        <table id="total">
         
         
          <tr>
            <td width="150">
              TOTAL TTC</td>
            <td class="color" width="60">
              {{facture.commande.totalCommande }}
              €</td>
          </tr>
        </table>


      {% endif %}

      {% if facture.commande.promo is defined and facture.commande.promo is not null %}
        <h2 class="titre">
          Articles en promotion</h2>


        <table id="entity">


          <tr>
            <td width="180">
              DESIGNATION</td>
            <td width="110">
              QUANTITE</td>
            <td width="100">
              P.U</td>
            <td width="180">
              MONTANT REDUCTION</td>
            <td width="105">
              MONTANT TTC</td>
          </tr>
          {% for promo in facture.commande.promo %}
            <tr>
              <td class="color">{{ promo.reference }}</td>
              <td class="color">
                {{ promo.quantite }}
              </td>
              <td class="color">
                {{promo.horsPromoTTC }}
                €</td>

              <td class="color">
                -
                {{promo.prixReduit}}€
              </td>
              <td class="color">
                {{promo.totalPromo}}€
              </td>


            </tr>
          </table>

          <table id="total">
            <tr>

              <td width="150">REDUCTION
                {{  promo.reduction.valeur }}
                %
              </td>
              <td class="color" width="60">
                {{promo.prixReduit }}€
              </td>

            </tr>
            <tr>
              <td width="150">
                FRAIS DE LIVRAISON</td>
              <td class="color" width="60">{{facture.commande.fraisPort }}
                €</td>
            </tr>
            <tr>
              <td width="150">
                TOTAL TTC
              </td>

              <td class="color" width="60">
                {{facture.commande.totalPromo * promo.quantite + facture.commande.fraisPort }}
                €</td>
            </tr>
          </table>


        {% endfor %}
        <table class="total-commande" id="total">
          <tr>
            <td width="150">TOTAL COMMANDE :
            </td>
            <td  width="60">{{facture.commande.totalCommande  }}
              €</td>
          </tr>
        </table>
      {% endif %}

       <div id="footer_pdf">

      <div class="float-left">
        <h3>{{site_name}}</h3>
        <p><i class="fas fa-email"></i> {{mail_contact}}</p>


        <p>{{rue}}
          {{cp}}
          {{ville}}</p>


      </div>

      <div class="float-right">
        <p class="telephone_fixe">{{telephone_fixe}}</p>


        <p>
          <i class="fas fa-mobile-alt"></i>
          {{telephone_mobile}}</p>

      </div>
    </div>
    </div>
   
  </body>
</html>
