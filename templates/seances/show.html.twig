{% extends "base.html.twig" %}

		{% block title %}
			{{seance.title }}
		{% endblock %}

		{% block body %}

		  <div class="row content-page">
			{% if seance.filename is defined %}
       <div class="jumbotron" style="background:url({{ vich_uploader_asset(seance, 'imageFile')}}) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
     background-size: cover;">   </div>
      
      {% endif %} 

		
			    <div class="col-md-12">

						  <h1 class="mt-3"> {{seance.title }}</h1>
          </div>
					<div class="col-md-12">	
							<table class="table table-hover table-font-size">
								<thead>
									<tr scope="col">
										<th scope="col">
											Séance
										</th>
										<th scope="col">
											Duree de la séance
										</th>
										<th scope="col">
											Prix de la séance
										</th>
										<th scope="col">
                          Prendre un rendez-vous
										</th>
									</tr>
								</thead>

                
								{% for option in options %}
									<tbody>
										<td>
										 {{ option.genre}}	{% if option.genre == 'Enfants' %} {{'<span class="asterix-color">*</span>'}} {% endif %}
										</td>
										<td>
					              {{ option.duree|format_time( 'short') }}
										</td>

										<td>
											{{option.prix}} 
										</td>
										<td>
                           <a href="{{path('seance_booking', {'id' : option.id})}}" class="btn btn-info" >Prendre un rendez -vous</a>
													  <a href="{{path('seance_booking', {'id' : option.id})}}" class="btn btn-info" >Voir le calendrier</a>
										</td>

									{% endfor %}
						
								</tbody>
							</table>
              <div class="paragraph">	{{seance.description|raw}}</div>
          </div>

			</div>
			
{% endblock %}
