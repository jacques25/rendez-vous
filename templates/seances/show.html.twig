{% extends "base.html.twig" %}

		{% block title %}
			{{seance.title }}
		{% endblock %}

		{% block body %}

			<div class="row">	
						
				{% if seance.filename is defined %}
					  <div class="jumbotron" style="background:url({{ vich_uploader_asset(seance, 'imageFile')}}) no-repeat center center;
						    -webkit-background-size: cover;
						    -moz-background-size: cover;
						    -o-background-size: cover;
						     background-size: cover;">
						</div>

				{% endif %}
					<div id="modal-comment" class="modal-comment">
               {% include "seances/_seance-form.html.twig" %}
					</div>
				  <div class="col-md-12">
                <h1 class="mt-3">	{{seance.title }}</h1>
				        		<div class="paragrah">{{seance.description|raw}}</div>
				  </div>
				</div>
			<div class="row">	
			        {% for option in options %}
				            <div class="col-lg-6 ">
										
												<div class="card card-seances">
												   <div class="card-services-header">
													         <h5> {{seance.title}}  </h5>
													 </div>
													 <div class="card-services-body">
													 	     <div class="card-text">
														              <div class="seance-genre"> Seance :	  <div class="option-genre">{{ option.genre}}</div>
									                        	{% if option.genre == 'Enfants' %}
										                                	{{'<span class="asterix-color">*</span>'}}
									                      	{% endif %}</div>
																					<div class="duree">	Durée  :  <div class="option-duree">{{ option.duree|format_time( 'short') }} Heure</div></div>
														        	  <div class="prix">	Prix: 	<div class="option-prix">{{option.prix|format_currency('EUR', {rounding_mode:'floor'} )}}</div></div>
														          
													        </div>
													       
                            </div>
													  <div class="card-services-footer">
													            	<a href="{{path('seance_booking', {'id' : option.id})}}" class="btn btn-rendez-vous">
											              Prendre un rendez -vous
										            </a>
										             <a href="{{path('seance_booking', {'id' : option.id})}}" class="btn btn-rendez-vous">
										                    	Voir le calendrier
										              </a>
													  </div>
												</div>	  
										</div>
	            		{% endfor %}
   </div>
<div class="row">
						
					<div class="col-md-12">
					<section class="comments" id="comments">
						<section class="previous-comments">
							{% include 'comment/seance_comment.html.twig' with { 'comments': seance.comments } %}
						</section>
					</section>

					{% if is_granted("ROLE_USER_SEANCE") %}
						<button id="btn_formation" class="btn btn-success mb-5">	Ecrire  un commentaire
						</button>
						 
							{% else %}
						<div class="alert alert-warning">
							<strong>
								Attention Vous ne pouvez écrire un commentaire qu' une fois connecté
							</strong>
							<a href="{{path('account_login')}}" class="btn btn-primary btn-sm">
								se connecter
							</a>
						</div>
					{% endif %}
				</div>

			</div>

		{% endblock %}
