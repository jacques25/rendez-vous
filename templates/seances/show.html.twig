{% extends "base.html.twig" %}

		{% block title %}
			{{seance.title }}
		{% endblock %}

		{% block body %}

		  <div class="row">

			    <img class="images-page img-fluid" src="{{vich_uploader_asset(seance, 'imageFile')}}" alt={{seance.filename}}> 
			</div>
			<div class="row content-page">
			    <div class="col-md-12">

						  <h1 class="mt-3"> {{seance.title }}</h1>
          </div>
					<div class="col-md-12">	
							<table class="table table-hover table-font-size">
								<thead>
									<tr scope="col">
										<th scope="col">
											Séance
										</th>
										<th scope="col">
											Duree de la séance
										</th>
										<th scope="col">
											Prix de la séance
										</th>
									</tr>
								</thead>

                
								{% for option in options %}
									<tbody>
										<td>
										 {{ option.genre}}	{% if option.genre == 'Enfants' %} {{'<span class="asterix-color">*</span>'}} {% endif %}
										</td>
										<td>
										{% if option.duree != null %}	{{ option.duree }} {% endif %}
										</td>

										<td>
											{{option.prix|format_currency('EUR')}}
										</td>

									{% endfor %}
						
								</tbody>
							</table>
              <div class="paragraph">	{{seance.description|raw}}</div>
          </div>

			</div>
			
{% endblock %}
