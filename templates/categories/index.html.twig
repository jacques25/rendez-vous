{% extends "base.html.twig" %}
{% block body %}
  <div class="container">
    <div class="row">
      {% for category in categories %}
        <a class="btn btn-secondary" href="{{path('category.index')}}">
          {{category.title}}</a>
        <div class="col-md-3">
          <div class="card">
            {{category.article.title }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}