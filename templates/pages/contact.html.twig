{% extends "base.html.twig" %}

		{% block title %}
			Contactez moi !
		{% endblock %}

		{% block body %}
			<div class="row form-box">


				<div class="col-8">

					<div class="card-registration">
						<div class="card-header bg-light">
							<h2 class="text-center font-italic">
								Formulaire de contact
							</h2>
						</div>
						<div class="card-body-registration">
							{{form_start(form)}}

							{{form_row(form.lastname)}}

							{{form_row(form.firstname)}}

							{{form_row(form.email)}}

							{{form_row(form.phone)}}

							{{form_row(form.subject)}}

							{{form_row(form.message)}}

							<button type="submit" class="btn btn-success btn-block rounded-3 py-2">
								Envoyer
							</button>
							{{form_end(form)}}
						</div>
					</div>
				</div>

			</div>
		{% endblock %}
