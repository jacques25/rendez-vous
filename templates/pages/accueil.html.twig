{% extends "base.html.twig" %}

{% block title %} {{page.title}} {% endblock %}

{% block body %}
 
    <div class="main-box"> 
      
    <div class="content-page">

         <img class="images-top images-page img-fluid" src="{{ vich_uploader_asset(page, 'imageFile')}}" alt="{{page.filename}}">
   {% for label, messages in app.flashes %}
         
           <div class="alert alert-{{ label }}">
           {% for message in messages %}
             <p> {{ message}} </p>
           {% endfor %}
           </div>
        
      {% endfor %}
  
           <h1 class="mt-3">{{page.title }}</h1>
        
      
       <div class="paragraph">  {{ page.description|raw }}   </div>
    </div>
    </div>
{% endblock %}


