{% extends 'base.html.twig' %}

{% block title %} {{page.title}} {% endblock %}

{% block body %}
<div class="row content-page mt-4">
 {% if page.filename is defined %}
    <div class="jumbotron" style="background: url({{ vich_uploader_asset(page, 'imageFile')}});" ></div>
 {% endif %}  

<div class="justify-content-center ">
 <h1>{{page.title}}</h1>

 <div class="paragraph mb-5">{{page.description|raw}}</div>
 
 </div>
 </div>
{% endblock %}
