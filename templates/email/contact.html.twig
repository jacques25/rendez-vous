
			<div class="modal-contact-form modal-contact-centered" role="document" >
					<div class="modal-contact-content">
						<div class="modal-header">
							<h3 class="modal-title">	Formulaire de contact</h3>
								  	<span id="close-contact" class="close-contact"><i class="fas fa-times-circle"></i></span>	
						</div>
						<div class="modal-body">
						   <form name="contact" method="POST" action="{{path('contact_me')}}">
							  <div class="form-group">
								  <select name="contact[gender]" class="form-control">
								      <option value="Madame">Madame</option>
											<option value="Monsieur">Monsieur</option>
									</select>
								</div>
							  <div class="form-group"><input type="text" id="contact_firstname" name="contact[firstname]" required="required" placeholder="Prénom" class="form-control"></div>
								<div class="form-group"><input type="text" id="contact_lastname" name="contact[lastname]" required="required" placeholder="Nom" class="form-control"></div>
