						<center>
							<a class="btn-url" href="{{ url('user_facture')}}">
								 Facture
							</a>
						</center>


					</callout>
				</columns>
	  	</row>
		  <row class="footer text-center">
			  <columns large="3">
				<spacer size="20"></spacer>
			  	<a class="btn-login"  href="{{url('account_login')}}" >
					Connexion
				</a>
			  </columns>
		  </row>
</container>


