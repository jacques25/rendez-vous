								<p>
									<strong>	Numéro de commande	</strong>
									<br/>
									 {{commande.numeroCommande}}
								</p>
							</columns>
							<columns large="6">
              	<p>
									<strong>
										Adresse Email
									</strong>
									<br/>
									{{user.email}}
								</p>
								<p>
									<strong>Adresse de livraison	</strong>
									<br/>
									{{commande.commande.livraison.firstname}}
									{{commande.commande.livraison.lastname}}
